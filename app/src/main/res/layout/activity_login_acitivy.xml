<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
      android:gravity="center_horizontal"
     android:background="@mipmap/login2x"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.example.apac.rpcdata.ui.LoginAcitivy">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/px_250"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"

        android:paddingRight="20dp">

        <TextView
            android:id="@+id/zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号: "
            android:textColor="@color/white"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_username"
            style="@style/edit_style"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:maxLength="6"
            android:textColor="@color/white"

            android:inputType="text"
            android:background="@drawable/sp_bd_gray_cor"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"

            android:textColor="@color/white"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_password"
            style="@style/edit_style"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
             android:maxLength="6"
            android:textColor="@color/white"

            android:inputType="textPassword"
            android:background="@drawable/sp_bd_gray_cor"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login"

        android:layout_marginLeft="@dimen/px_170"
        android:layout_marginTop="@dimen/px_50"
        android:text="您还没有红包链账号，立即注册>"
        android:textColor="@color/white"
        android:textSize="@dimen/px_22" />



      <TextView
          android:layout_marginTop="@dimen/px_130"
          android:layout_below="@+id/tv_register"
          android:id="@+id/tv_login"
          style="@style/textview_style"
           android:layout_centerHorizontal="true"
           android:layout_width="@dimen/px_200"
          android:text="登录"
          />











</LinearLayout>
