<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apac.rpcdata.ui.me.AddressActivity">

     <LinearLayout
         android:background="#ff2802"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="@dimen/px_88">
         <ImageView
             android:id="@+id/back_myadd"
             android:layout_width="@dimen/px_40"
             android:layout_height="@dimen/px_40"
             android:src="@mipmap/back2x"
              android:layout_marginTop="@dimen/px_20"
             android:layout_marginLeft="@dimen/px_30"
             />
           <TextView
               android:textColor="@color/white"
               android:text="添加收货地址"
               android:textSize="@dimen/px_35"
               android:layout_marginTop="@dimen/px_20"
               android:layout_marginLeft="@dimen/px_210"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

          <TextView
              android:layout_marginLeft="@dimen/px_150"
              android:layout_marginTop="@dimen/px_20"
              android:textColor="@color/white"
              android:text="保存"
              android:textSize="@dimen/px_35"

              android:id="@+id/tv_address"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
     </LinearLayout>

    <LinearLayout
        android:id="@+id/ress1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  收货人: "
            android:textColor="@color/gray_666"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ress_user"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/sp_bd_ee"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/gray_666"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ress1"
        android:id="@+id/ress2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/px_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码:"
            android:textColor="@color/gray_666"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ress_phone"
            style="@style/edit_style"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/sp_bd_ee"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/ress2"
        android:id="@+id/ress4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/px_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在省份"
            android:textColor="@color/gray_666"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/ress_province"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/sp_bd_ee"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/gray_666"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ress4"
        android:id="@+id/ress5"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/px_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在城市"
            android:textColor="@color/gray_666"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/ress_city"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/sp_bd_ee"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/gray_666"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ress5"
        android:id="@+id/ress6"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/px_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在区县"
            android:textColor="@color/gray_666"
            android:textSize="13sp" />



        <EditText
            android:id="@+id/ress_address"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/sp_bd_ee"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/gray_666"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ress6"
        android:id="@+id/ress7"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/px_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textColor="@color/gray_666"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/ress_listress"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/sp_bd_ee"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/gray_666"
            android:textSize="13sp" />

    </LinearLayout>


     <LinearLayout
         android:id="@+id/ress9"
         android:layout_marginTop="@dimen/px_20"
         android:layout_below="@+id/ress7"
           android:layout_marginLeft="@dimen/px_40"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">


        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/defaults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="默认发送地址"/>
            <RadioButton
                android:id="@+id/default_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="非默认地址"/>
        </RadioGroup>
    </LinearLayout>



</RelativeLayout>
